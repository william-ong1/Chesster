{
  "name": "chess-mimic",
  "version": "1.0.0",
  "description": "Train a chess engine on your games and play against it.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder --linux",
    "build:appimage": "electron-builder --linux AppImage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "gts lint",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "chess.js": "0.10.3",
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@vitest/coverage-v8": "^3.0.0",
    "electron": "^29.0.0",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "build": {
    "appId": "com.chessmimic.app",
    "productName": "Chess Mimic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "app/**/*",
      "scripts/**/*",
      "node_modules/chess.js/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/"
      },
      {
        "from": "maia-individual/",
        "to": "maia-individual/"
      },
      {
        "from": "models/",
        "to": "models/"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/william-ong1/Chesster.git"
  },
  "keywords": [],
  "author": "Shreyan Mitra",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/william-ong1/Chesster/issues"
  },
  "homepage": "https://github.com/william-ong1/Chesster#readme"
}
